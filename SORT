# sorting  assenting or descending order the data 
v <- c(12,22,5,6,18,25,1,7,4)
sort(v) # assenting order
sort(v,decreasing = TRUE)  # descending Order 



a <- readline(prompt = "If you want assenting order Press A or descending Order Press D ")

c <- c(1,5,8,6,4,10,9)


if ("A"==a){
  
  
  print( sort(c))
  
}else
{
  print(sort(c,decreasing = TRUE))
  
}

